#!/usr/bin/env bash
##
# Package-specific dependencies. These get added to the list of preexisting
# dependencies in the PKGBUILD.
##
#
makedeb() {
  add_depends=('makepkg' 'dpkg-dev' 'binutils' 'file')
  add_conflicts=('makedeb-alpha')
  remove_depends=('pacman')
}

makedeb_alpha() {
  add_depends=('makepkg' 'dpkg-dev' 'binutils' 'file')
  add_conflicts=('makedeb')
  remove_depends=('pacman')
}

yq() {
  add_depends=('python-is-python3')
  add_makedepends=('python-is-python3')
}

# General dependencies
alsa-lib="libasound2"
awk="mawk"
glibc="libc6"
go="golang-go"
gtk3="libgtk-3-0"
gtk-engine-murrine="gtk2-engines-murrine"
gtk-engines="gtk2-engines"
libarchive="libarchive-tools"
libcups="libcups2"
libnotify="libnotify-bin"
libsecret="libsecret-common"
libxss="libxss1"
libxtst="libxtst6"
mailcap="mime-support"
nspr="libnspr4"
nss="libnss3"
python="python3"
python-argcomplete="python3-argcomplete"
python-toml="python3-toml"
python-xmltodict="python3-xmltodict"
python-yaml="python3-yaml"
